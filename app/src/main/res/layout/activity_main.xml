<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <Button
        android:id="@+id/btn_image_generation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text To Image"
        android:layout_marginTop="@dimen/_24sdp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_edit_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Image"
        android:layout_marginTop="@dimen/_24sdp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_image_generation" />


    <Button
        android:id="@+id/btn_text_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Variations"
        android:layout_marginTop="@dimen/_24sdp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_image" />



    
    
    
</androidx.constraintlayout.widget.ConstraintLayout>